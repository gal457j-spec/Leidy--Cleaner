PORT=3000
NODE_ENV=production
APP_URL=https://seu-dominio.com

# DATABASE - use a managed DB in production (example: PostgreSQL)
DATABASE_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:5432/<DB_NAME>

# JWT
JWT_SECRET=<SET_ME_JWT_SECRET>
JWT_REFRESH_SECRET=<SET_ME_JWT_REFRESH_SECRET>
JWT_EXPIRES_IN=24h

# EMAIL
EMAIL_USER=seu_email@dominio.com
EMAIL_PASS=<SET_ME_EMAIL_PASS>
EMAIL_FROM=noreply@seu-dominio.com

# TWILIO (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=<SET_ME_TWILIO_SID>
TWILIO_AUTH_TOKEN=<SET_ME_TWILIO_TOKEN>
TWILIO_PHONE_NUMBER=+55XXXXXXXXXXX

# PAYMENTS
STRIPE_SECRET_KEY=<SET_ME_STRIPE_SECRET>
STRIPE_PUBLIC_KEY=<SET_ME_STRIPE_PUBLIC>
FEATURE_PIX=true
FEATURE_STRIPE=false

# PIX (provider-specific)
PIX_PROVIDER_KEY=<SET_ME_PIX_KEY>
PIX_PROVIDER_SECRET=<SET_ME_PIX_SECRET>
PIX_WEBHOOK_URL=https://seu-dominio.com/api/webhooks/pix
PIX_WEBHOOK_SECRET=<SET_ME_PIX_WEBHOOK_SECRET>

# OBSERVABILITY
SENTRY_DSN=<SET_ME_SENTRY_DSN>
NEW_RELIC_LICENSE_KEY=<SET_ME_NEWRELIC_KEY>

# STORAGE (opcional)
AWS_S3_BUCKET=<SET_ME_BUCKET>
AWS_S3_REGION=us-east-1

# FEATURES
ENABLE_EMAIL=true
ENABLE_SMS=true
ENABLE_CHAT=false

# CORS
CORS_ORIGIN=https://seu-dominio.com

# RATE LIMITING
RATE_WINDOW_MS=900000
RATE_MAX=100

# Segurança: não comitar segredos reais neste arquivo
# Substitua os valores com secrets do seu provider (Vault, AWS Secrets Manager, etc.)
